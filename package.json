{
	"name": "preferans-engine-js",
	"version": "0.1.0",
	"description": "nodejs engine for preferans",
	"engines": {
		"node": ">=8.9"
	},
	"main": "./lib/prefEngine.js",
	"types": "./lib/prefEngine.d.ts",
	"scripts": {
		"all": "yarn & yarn build & yarn test & yarn docs",
		"build": "tsc",
		"build:watch": "tsc --watch",
		"lint": "tslint -p tsconfig.json",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"docs": "typedoc --readme none --out docs src",
		"test": "nyc mocha -r ts-node/register test/**/*.spec.ts",
		"coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
		"sonar": "sonarjs -e .sonarlint/**,node_modules/**,coverage/**,.nyc_output/**",
		"latest-interactive": "yarn upgrade-interactive --latest",
		"latest": "yarn upgrade --latest"
	},
	"nyc": {
		"include": [
			"src/**/*.ts"
		],
		"exclude": [
			"test/**/*.ts"
		],
		"extension": [
			".ts"
		],
		"require": [
			"ts-node/register"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"sourceMap": true,
		"instrument": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/prefko/preferans-engine-js.git"
	},
	"keywords": [
		"engine",
		"preferans",
		"cards"
	],
	"author": "Predrag Stojadinovic",
	"license": "Unlicense",
	"bugs": {
		"url": "https://github.com/prefko/preferans-engine-js/issues"
	},
	"homepage": "https://github.com/prefko/preferans-engine-js#readme",
	"dependencies": {
		"@types/lodash": "^4.14.136",
		"lodash": "^4.2.1",
		"preferans-deck-js": ">=2.3.2",
		"preferans-paper-js": "*",
		"preferans-rating-js": "*",
		"preferans-score-js": "*"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.7",
		"chai": "^4.1.2",
		"coveralls": "^3.0.5",
		"mocha": "^6.2.0",
		"nyc": "^14.1.1",
		"prettier": "^1.18.2",
		"sonarjs": "^1.0.0",
		"source-map-support": "^0.5.12",
		"ts-node": "^8.3.0",
		"tslint": "^5.18.0",
		"tslint-config-prettier": "^1.18.0",
		"tslint-no-unused-expression-chai": "^0.1.4",
		"typedoc": "^0.15.6",
		"typescript": "^3.5.3"
	}
}
